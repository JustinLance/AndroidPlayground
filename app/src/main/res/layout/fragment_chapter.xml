<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="playground.android.me.sr1.androidplayground.toolbox.utils.ChapterFragment">

    <LinearLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:transitionName="@string/course_uda_material_design_l4_shared_element_transition_image_view" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/text_sub_title"
            tools:text="@string/tools_subtitle" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/text_title"
            android:textStyle="bold"
            tools:text="@string/tools_title" />

        <!--
            这个是倍数
            android:lineSpacingMultiplier="1.1"
            这个是固定值
            android:lineSpacingExtra="3dp"-->
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:singleLine="false"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_content"
            tools:text="@string/tools_content" />
    </LinearLayout>

</ScrollView>
