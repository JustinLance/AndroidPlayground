<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
    <changeBounds
        android:duration="300"
        android:interpolator="@android:interpolator/decelerate_quad">
        <targets>
            <target android:targetId="@id/leftTop" />
            <target android:targetId="@id/rightTop" />
            <target android:targetId="@id/leftBottom" />
            <target android:targetId="@id/rightBottom" />
        </targets>
    </changeBounds>
    <slide
        android:duration="300"
        android:startDelay="300"
        android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/title" />
            <target android:targetId="@id/content" />
        </targets>
    </slide>
</transitionSet>